<div class="container text-grey h-100">
    <h2 class="display-6 pt-5">Login</h2>
    <hr>
    {{#if message}} 
        <div id="emailHelp" class="my-5 form-text yass-feedback">{{message}}</div>
    {{/if}}
    <div class="container mt-5">
        <form action="/login" method="POST">
            <div class="mb-3">
                <label for="email" class="form-label">Email or username</label>
                <input name="email" value="{{user.email}}" class="form-control  {{#if errors}} is-invalid {{/if}}" id="email" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" type="password" class="form-control {{#if errors}} is-invalid {{/if}}" id="password">
            {{#if errors}} 
                <div id="emailHelp" class="form-text invalid-feedback">{{errors}}</div>
            {{/if}}
            </div>
            <button type="submit" class="button-action">Login</button>
        </form>
    </div>
</div>