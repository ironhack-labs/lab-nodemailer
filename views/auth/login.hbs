<div class="container-fluid">
  <div class="col-lg-4 mx-auto mt-5">
    <h2>Login</h2>
    {{#if messageActive}}
    <div class="alert alert-danger mx-auto mt-5" role="alert">
    <h5>{{messageActive}}</h5>
    </div>
    {{/if}}
    <form action="/auth/login" method="POST" id="form-container">
      <div class="form-group">
      <label for="username">Username</label>
      <input class="form-control {{#if message}}is-invalid{{else}}is-valid{{/if}}" id="username" type="text" name="username" placeholder="JonSnow">
      </div>
      <div class="form-group">
      <label for="password">Password</label>
      <input class="form-control {{#if message}}is-invalid{{else}}is-valid{{/if}}" id="password" type="password" name="password" placeholder="Your password">
      </div>
      {{#if message }}
        <div class="error-message valid-feedback text-danger">{{ message }}</div>
      {{/if}}


      <button class="btn btn-success mt-2">Login</button>

      <p class="account-message">
        Don't have an account yet?
        <a href="/auth/signup">Signup</a>
      </p>
    </form>

  </div>
</div>


