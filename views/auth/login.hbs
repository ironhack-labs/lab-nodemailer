<h2 class="text-center py-5">Login</h2>

<form action="/auth/login" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Username</label>
    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="username" placeholder="Username here">
    <small id="emailHelp" class="form-text text-muted">Enter a valid username.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" name="password">
    {{#if message }}
    <div class="error-message">{{ message }}</div>
    {{/if}}
  </div>
  <button type="submit" class="btn btn-primary">Login</button>
   <small id="emailHelp" class="form-text text-muted py-3">Don't have an account yet?<a href="/auth/signup" class="p-3">Signup</a> </small>
</form>
