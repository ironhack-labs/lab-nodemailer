<div class="container-fluid">
  <div class="col-lg-4 mx-auto mt-5">
    <h2>Signup</h2>

    <form action="/auth/signup" method="POST" id="form-container">
      <div class="form-group">
        <label for="username">Username</label>
        <input class="form-control {{#if message}}is-invalid{{else}}is-valid{{/if}}" id="username" type="text" name="username" placeholder="JonSnow">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input class="form-control {{#if message}}is-invalid{{else}}is-valid{{/if}}" id="password" type="password" name="password" placeholder="Your password">
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control {{#if message}}is-invalid{{else}}is-valid{{/if}}" id="email" type="email" name="email" placeholder="Your email">
      </div>
      {{#if message }}
        <div class="error-message valid-feedback text-danger">{{ message }}</div>
      {{/if}}

      <button class="btn btn-success mt-2">Create account</button>

      <p class="account-message">
        Do you already have an account?
        <a href="/auth/login">Login</a>
      </p>
    </form>
  </div>
</div>