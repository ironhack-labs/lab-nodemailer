<div class="container">

    <h1>Enviar un email</h1>

    <form action="/email/send" method="post">
        <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input type="email" name="email" class="form-control" id="exampleInputEmail1">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail2">Concepto</label>
            <input type="text" name="subject" class="form-control" id="exampleInputEmail2">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail3">Mensaje</label>
            <textarea class="form-control" name="message" id="exampleInputEmail3"></textarea>
        </div>
        <button type="submit" class="btn btn-dark">Enviar email</button>
    </form>
</div>