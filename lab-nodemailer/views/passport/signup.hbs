<form action="/signup" method="POST">
  <div>
    <label>Username</label>
    <br>
    <input type="text" name="username">
  </div>
  <div>
    <label>Email</label>
    <br>
    <input type="email" name="email">
  </div>
  <div>
    <label>Password</label>
    <br>
    <input type="password" name="password">
  </div>
  <input type="submit" value="Create Account">
</form>